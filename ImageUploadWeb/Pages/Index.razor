@page "/"
@using ImageUploadWeb.Models
@using ImageUploadWeb.Services
@inject ICustomerService CustomerService
@inject NavigationManager Navigation
@inject ILogger<Index> Logger

<PageTitle>Image Upload System</PageTitle>

<div class="hero-section">
    <div class="hero-content">
        <h1>Image Upload System</h1>
        <p class="hero-description">
            Manage customer profiles with image galleries. Upload, view, and organize images 
            with our intuitive drag-and-drop interface and responsive carousel display.
        </p>
        <div class="hero-actions">
            <button class="btn btn-primary btn-lg" @onclick="NavigateToCustomers">
                👥 Manage Customers
            </button>
            <button class="btn btn-outline-primary btn-lg" @onclick="NavigateToCustomers">
                ➕ Add New Customer
            </button>
        </div>
    </div>
</div>

<div class="features-section">
    <div class="container">
        <h2 class="section-title">Key Features</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">📁</div>
                <h3>Drag & Drop Upload</h3>
                <p>Intuitive file upload with drag-and-drop support. Simply drag images onto the upload area or click to browse.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🖼️</div>
                <h3>Image Gallery</h3>
                <p>View images in both grid and carousel modes. Switch between views for the best viewing experience.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🔢</div>
                <h3>Image Limits</h3>
                <p>Enforce a maximum of 10 images per customer with real-time count tracking and limit warnings.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🗑️</div>
                <h3>Easy Management</h3>
                <p>Delete images with a single click. Manage your image collection effortlessly.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">📱</div>
                <h3>Responsive Design</h3>
                <p>Fully responsive interface that works perfectly on desktop, tablet, and mobile devices.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">⚡</div>
                <h3>Base64 Storage</h3>
                <p>Images stored as Base64 in the database for easy portability and backup management.</p>
            </div>
        </div>
    </div>
</div>

@if (RecentCustomers.Any())
{
    <div class="recent-customers-section">
        <div class="container">
            <h2 class="section-title">Recent Customers</h2>
            <div class="customers-preview">
                @foreach (var customer in RecentCustomers.Take(3))
                {
                    <div class="customer-preview-card" @onclick="() => NavigateToCustomer(customer.Id)">
                        <div class="customer-avatar">
                            @if (customer.Images.Any())
                            {
                                <img src="@GetCustomerAvatar(customer)" alt="Avatar" class="avatar-image" />
                            }
                            else
                            {
                                <div class="avatar-placeholder">
                                    @GetInitials(customer.FirstName, customer.LastName)
                                </div>
                            }
                        </div>
                        <div class="customer-info">
                            <h4>@customer.FirstName @customer.LastName</h4>
                            <p>@customer.Images.Count images</p>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center">
                <button class="btn btn-outline-primary" @onclick="NavigateToCustomers">
                    View All Customers
                </button>
            </div>
        </div>
    </div>
}

